<h1>New Event</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model:@event, local:true) do |f|%>
            
            <%= f.label :event%>
            <%= f.text_field :event, class: "form-control" %>

            <%= f.label :date%>
            <%= f.date_select :date, type:'date', class: "form-control" %>

            <%= f.label :location%>
            <%= f.text_field :location, class: "form-control" %>

            <%= f.label :invite%>
            <%= f.text_area :invite, class: "form-control" %>


            <%= f.submit "Create new event",class:"btn btn-primary" %>
        <% end %>
    </div>
</div>